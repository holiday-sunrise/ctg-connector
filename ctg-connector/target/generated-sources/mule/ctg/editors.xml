      <jar name="ctgserver (ctgserver.jar)" fileName="ctgserver(.*)\.jar" targetFolder="/lib/ctg" targetRuntimeFolder="/plugins" externalPluginDependency="true"></jar>
      <jar name="cicsjee (cicsjee.jar)" fileName="cicsjee(.*)\.jar" targetFolder="/lib/ctg" targetRuntimeFolder="/plugins" externalPluginDependency="true"></jar>
      <jar name="screenable (screenable.jar)" fileName="screenable(.*)\.jar" targetFolder="/lib/ctg" targetRuntimeFolder="/plugins" externalPluginDependency="true"></jar>
      <jar name="j2ee 1.6 connector spec (geronimo-j2ee-connector_1.6_spec-1.0.jar)" fileName="geronimo-j2ee-connector_1.6_spec(.*)\.jar" targetFolder="/lib/ctg" targetRuntimeFolder="/plugins" externalPluginDependency="true"></jar>
    </require>
  </global-cloud-connector>
